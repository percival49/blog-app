<% if !logged_in? %>
  <%= button_to 'Login', login_path, method: :get %>
  <%= button_to 'Signup', signup_path, method: :get %>
<% else %>
  <%= button_to 'Logout', logout_path, method: :delete %>
  <%= button_to 'Home', root_path, method: :get  %>
  <%= button_to 'Blogs', blogs_path, method: :get  %>
  <%= button_to 'Profile', user_path(current_user.id), method: :get  %>
<% end %>
